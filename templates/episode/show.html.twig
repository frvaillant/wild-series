{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    {% include 'admin/_admin_nav.html.twig' %}

    <div class="container">
    <h1>Episode de {{ episode.season.program.title }}</h1>
    <h2>Saison n° {{ episode.season.number }}</h2>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Episode n°</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index', {'id': episode.season.id }) }}">back to list</a>

    <a href="{{ path('episode_edit', {'id': episode.id}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
</div>
{% endblock %}
