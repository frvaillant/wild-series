{% extends('base.html.twig') %}

{% block title %} {{ website }} : {{ program.title }}{% endblock %}

{%  block body %}

  {% if (program) %}
    <div class="container">
        <h1>{{ program.title }}</h1>
        <p><b>Catégorie : </b><a href="{{ path('wild_cat', {'cat' :program.category.name|replace({' ':"-"})|lower}) }}">{{ program.category.name }}</a></p>
        <p>{{ program.summary }}</p>
        <p><img src="{{ program.poster }}" width="100"></p>
        <div class="row">
            <div class="col-4">
                {{ program.seasons|length }} SAISONS<br>
                {% for season in program.seasons %}
                    <p>
                        <b><a href="{{ path('wild_season', { 'seasonId': season.id }) }}">Saison n° {{ season.number }}</a></b>
                        ({{ season.episodes|length }} épisodes)<br>
                    </p>
                {% endfor %}
            </div>
        </div>
    </div>
  {% endif %}
{% endblock %}